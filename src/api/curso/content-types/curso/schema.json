{
  "kind": "collectionType",
  "collectionName": "cursos",
  "info": {
    "singularName": "curso",
    "pluralName": "cursos",
    "displayName": "Curso",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 500
    },
    "precio": {
      "type": "decimal",
      "required": true
    },
    "imagen": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "cupon_descuento": {
      "type": "string"
    },
    "instructor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "tipo": {
      "type": "enumeration",
      "enum": [
        "curso",
        "conferencia"
      ],
      "required": true,
      "default": "curso"
    },
    "certificado": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "averageScore": {
      "type": "decimal"
    },
    "categoria": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::categoria.categoria"
    },
    "idioma": {
      "type": "string"
    },
    "cantidadEstudiantes": {
      "type": "integer",
      "default": 0
    },
    "subTitles": {
      "type": "string"
    },
    "whatYouWillLearn": {
      "type": "text"
    },
    "requirements": {
      "type": "text"
    },
    "descripcion": {
      "type": "richtext"
    },
    "additionalResources": {
      "type": "text"
    },
    "shortDescription": {
      "type": "richtext"
    },
    "precioDescuento": {
      "type": "decimal"
    },
    "whoIsThisCourseFor": {
      "type": "text"
    }
  }
}
